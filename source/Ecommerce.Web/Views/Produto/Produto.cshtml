    <script src="~/Scripts/jquery.mask.js"></script>
    <script src="~/Scripts/jquery.mask.min.js"></script>*@
<script src="~/js/Produto.js"></script>

<form class="form-horizontal">
    <fieldset>

        <div class="card">
            <div class="card-header" style="background-color:#144b87;color:white">
                <h2>Produtos</h2>
            </div>
            <div class="card-body">
                <a href="#" class="btn" style="background-color:#144b87;color:white;border-color:#144b87" data-toggle="modal" data-target="#modalAddOrEdit" onclick="LimparCampos()"><i class="fa fa-plus"></i> Adicionar</a>
                <hr />
                <div class="container">
                    <div class="table-responsive-lg">
                        <table class="table" id="tblProdutos">
                            <thead class="thead-light">
                                <tr>
                                    <th scope="col">
                                        Nome
                                    </th>
                                    <th scope="col">
                                        Tipo
                                    </th>
                                    <th scope="col">
                                        Tamanho
                                    </th>
                                    <th scope="col">
                                        Quantidade
                                    </th>
                                    <th scope="col">
                                        Valor
                                    </th>
                                    <th scope="col">
                                        Descrição
                                    </th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody class="tbody"></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </fieldset>

    <div class="modal fade" id="modalAddOrEdit" data-backdrop="false" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" style="max-width:70%" role="document">
            <div class="modal-content" >
                <div class="modal-body" style="padding:0px!important">
                    <div class="card">
                        <div class="card-header" style="background-color:#144b87;color:white">
                            <label id="lblTitleModal">Adicionar Produto</label>
                        </div>
                        <div class="card-body">
                            <div class="form-row" style="display:none">
                                <label for="Id">ID</label>
                                <input type="text" class="form-control" id="Id" placeholder="Id" disabled="disabled" />
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label id="lblTipo">Tipo</label>
                                    <select class="form-control" id="selTipo">
                                        <option value=""></option>
                                        <option value="Blusa">Blusa</option>
                                        <option value="Calça">Calça</option>
                                        <option value="Camiseta">Camiseta</option>
                                    </select>
                                </div>
                                <div class="form-group col-md-6">
                                    <label id="lblNome">Nome</label>
                                    <input type="text" id="txtNome" class="form-control" />
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-4">
                                    <label id="lblTamanho">Tamanho</label>
                                    <select class="form-control" id="selTamanho">
                                        <option value=""></option>
                                        <option value="P">P</option>
                                        <option value="M">M</option>
                                        <option value="G">G</option>
                                    </select>
                                </div>
                                <div class="form-group col-md-4">
                                    <label id="lblQuantidade">Quantidade</label>
                                    <input type="number" id="txtQuantidade" class="form-control" />
                                </div>
                                <div class="form-group col-md-4">
                                    <label id="lblValor">Valor</label>
                                    <input type="text" id="txtValor" class="form-control" />
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-12">
                                    <label id="lblDescricao">Descrição</label>
                                    <textarea class="form-control" id="txtDescricao" rows="5"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer" style="text-align:right">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                            <button type="button" class="btn btn-danger" id="btnLimpar" onclick="return LimparCampos();">Limpar</button>
                            <button type="button" class="btn btn-primary" id="btnCadastrar" onclick="return Adicionar();">Adicionar</button>
                            <button type="button" class="btn btn-primary" id="btnAtualizar" onclick="return Atualizar();">Atualizar</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</form>



<style>
    li.nav-item.active a {
        background: #fff;
        color: black;
        /*border: 1px solid #eee;
        border-bottom: none;*/
    }

    li.nav-item a {
        background: #144b87;
        color: white;
        /*border: 1px solid #eee;
        border-bottom: none;*/
    }
</style>
